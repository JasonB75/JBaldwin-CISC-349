<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--When Button is in pressed state -->
    <item android:state_pressed="true" android:color="#22a540" android:shape="rectangle" android:radius="15dp"/>
    <!--When Button is in selected state -->
    <item android:state_selected="true" android:color="#fabcff" android:shape="rectangle" android:radius="15dp"/>
    <!--Default Background Color -->
    <item android:color="#3F51B5" android:shape="rectangle" android:radius="10dp"/>

</selector>
